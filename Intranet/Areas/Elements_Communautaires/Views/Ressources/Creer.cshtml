@model Intranet.Areas.Elements_Communautaires.ViewModels.Creer.RessourceViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Créer une ressource</title>
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Ressource</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Titre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Titre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Titre, "", new { @class = "text-danger" })
                </div>

                @Html.LabelFor(model => model.DescriptionRessource, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.DescriptionRessource, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DescriptionRessource, "", new { @class = "text-danger" })
                </div>

                @Html.LabelFor(model => model.FichierMedia, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.FichierMedia, new { type = "file", @class = "form-control" })
                    @*@Html.EditorFor(model => model.FichierMedia, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.ValidationMessageFor(model => model.FichierMedia, "", new { @class = "text-danger" })
                </div>

                @Html.LabelFor(model => model.UrlMedia, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UrlMedia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UrlMedia, "", new { @class = "text-danger" })
                </div>

                @Html.LabelFor(model => model.DescriptionMedia, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.DescriptionMedia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DescriptionMedia, "", new { @class = "text-danger" })
                </div>

                @Html.LabelFor(model => model.Theme, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.ThemesSelectionnes,
                     Model.Theme,
                     "Associez la ressource à un ou plusieurs thème(s)",
                     new { @placeholder = "Choisissez un ou plusieurs thèmes dans la liste" }
                     )
                    @Html.ValidationMessageFor(model => model.ThemesSelectionnes)
                </div>

                @Html.LabelFor(model => model.Categorie, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.CategorieSelectionnee,
             Model.Categorie,
             "Choisissez une catégorie",
             new { @placeholder = "Choisissez une categorie dans la liste" }
             )
                    @Html.ValidationMessageFor(model => model.CategorieSelectionnee)
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Creer" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Revenir sur la page des Ressources", "Index")
    </div>
</body>
</html>
