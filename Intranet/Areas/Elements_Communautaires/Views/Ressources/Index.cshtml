@model IEnumerable<Intranet.Areas.Elements_Communautaires.Models.Ressources.Ressource>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Liste des Ressources</title>
</head>
<body>
    <p>
        @Html.ActionLink("Créer une nouvelle ressource", "Creer")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titre)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titre)
            </td>
            <td>
                @Html.ActionLink("Modifier", "Modifier", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Supprimer", "Supprimer", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
