@model Intranet.Areas.Composants.Models.Elements.Element

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Supprimer un élément</title>
</head>
<body>
    <h3>Etes-vous certain(e) de vouloir supprimer cet élément ?</h3>
    <div>
        <h4>Element</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Etat)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Etat)
            </dd>
    
        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div class="form-actions no-color">
                <input type="submit" value="Supprimer" class="btn btn-default" /> |
                @Html.ActionLink("Retourner vers la liste des éléments", "Index")
            </div>
        }
    </div>
</body>
</html>
