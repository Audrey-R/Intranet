@model IEnumerable<Intranet.Models.Element_Communautaire>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Liste des élements Communautaires</title>
</head>
<body>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
                @Html.DisplayNameFor(model => model.Collaborateur)
                @Html.DisplayNameFor(model => model.Etat)
                @Html.DisplayNameFor(model => model.Fraction)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
                @Html.DisplayFor(modelItem => item.Collaborateur)
                @Html.DisplayFor(modelItem => item.Etat)
                @Html.DisplayFor(modelItem => item.Fraction.Libelle)
            </td>
            <td>
                @Html.ActionLink("Modifier", "Modifier", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Supprimer", "Supprimer", new { id = item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
