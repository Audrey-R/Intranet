@model IEnumerable<Intranet.Areas.Composants.Models.Element>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Liste de tous les éléments</title>
</head>
<body>
    <p>
        @Html.ActionLink("Créer un nouvel élément", "Creer")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
                @Html.DisplayNameFor(model => model.Collaborateur)
                @Html.DisplayNameFor(model => model.Etat)
                @Html.DisplayNameFor(model => model.Fraction)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
                @if(item.Collaborateur == null)
                {
                    @Html.DisplayFor(modelItem => item.Collaborateur,"Non défini")
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Collaborateur)
                }
                @Html.DisplayFor(modelItem => item.Etat)
                @Html.DisplayFor(modelItem => item.Fraction.Libelle)
            </td>
            <td>
                @Html.ActionLink("Modifier", "Modifier", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Supprimer", "Supprimer", new { id = item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
