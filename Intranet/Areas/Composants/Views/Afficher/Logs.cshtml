@model IEnumerable<Intranet.Areas.Composants.Models.Log>

    @{
        Layout = null;
    }

    <!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Voir le détail d'un élément</title>
    </head>
    <body>
        <div>
            <h4>Détails d'un élément</h4>
            <hr />
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                        @Html.DisplayNameFor(model => model.Entite)
                        @Html.DisplayNameFor(model => model.Propriete)
                        @Html.DisplayNameFor(model => model.DateLog)
                        @Html.DisplayNameFor(model => model.AncienneValeur)
                        @Html.DisplayNameFor(model => model.NouvelleValeur)
                        @Html.DisplayNameFor(model => model.ClePrimaire)
                        @Html.DisplayNameFor(model => model.Operation)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                            @Html.DisplayFor(modelItem => item.Entite)
                            @Html.DisplayFor(modelItem => item.Propriete)
                            @DateTime.Parse(Html.DisplayFor(modelItem => item.DateLog).ToString()).ToShortDateString()
                            @Html.DisplayFor(modelItem => item.AncienneValeur)
                            @Html.DisplayFor(modelItem => item.NouvelleValeur)
                            @Html.DisplayFor(modelItem => item.ClePrimaire)
                            @Html.DisplayFor(modelItem => item.Operation)
                        </td>
                        @*<td>
                                @Html.ActionLink("Modifier", "Modifier", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Supprimer", "Supprimer", new { id = item.Id })
                            </td>*@
                    </tr>
                }
            </table>
        </div>
        <p>
            @Html.ActionLink("Retourner vers la liste des éléments", "Index")
        </p>
    </body>
</html>
